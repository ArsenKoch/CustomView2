<resources>
    <!-- Base application theme. -->
    <style name="Theme.CustomView2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="TicTacToeFieldStyle">@style/GlobalTicTacToeFieldStyle</item>
    </style>

    <style name="DefaultTicTacToeFieldStyle">

        <item name="playerColor1">#008800</item>
        <item name="playerColor2">#E80F0F</item>
        <item name="gridColor">#988F8F</item>

    </style>

    <style name="GlobalTicTacToeFieldStyle" parent="DefaultTicTacToeFieldStyle">
        <item name="playerColor1">#076C9A</item>

    </style>
</resources>